rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTIONS UTILITAIRES (Pour simplifier la lecture) ---
    
    // Récupère les données de l'utilisateur qui fait la demande
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Vérifie si c'est un Admin
    function isAdmin() {
      return request.auth != null && (getUserData().role == 'admin' || getUserData().role == 'superadmin');
    }

    // Vérifie si c'est un Vendeur
    function isSeller() {
      return request.auth != null && getUserData().role == 'seller';
    }

    // Vérifie si l'utilisateur est propriétaire de la donnée (ex: son profil)
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- RÈGLES PAR COLLECTION ---

    // 1. UTILISATEURS
    // - L'Admin peut TOUT faire (créer des vendeurs, supprimer des comptes).
    // - Le Client/Vendeur peut lire et modifier SON propre profil uniquement.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    // 2. BOUTIQUES (Shops)
    // - Lecture : Tout le monde.
    // - Création/Suppression : Admin seulement (comme tu as demandé).
    // - Modif : Admin OU le Vendeur propriétaire de la boutique.
    match /shops/{shopId} {
      allow read: if true;
      allow create, delete: if isAdmin(); 
      allow update: if isAdmin() || (isSeller() && resource.data.ownerId == request.auth.uid);
    }

   // 3. PRODUITS (Règle Universelle)
    // Le joker {path=**} permet de lire les produits qu'ils soient à la racine 
    // OU à l'intérieur d'une boutique (/shops/x/products/y).
    // Indispensable pour collectionGroup('products').
    match /{path=**}/products/{productId} {
      allow read: if true;
      allow write: if isAdmin() || isSeller();
    }

    // 4. CATÉGORIES
    // - Seul l'Admin gère les catégories.
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 5. COMMANDES
    // - Création : Tout utilisateur connecté (Client).
    // - Lecture : L'acheteur, le vendeur concerné ou l'Admin.
    // - Mise à jour (ex: changer statut) : Vendeur ou Admin.
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read: if isAdmin() || resource.data.userId == request.auth.uid || resource.data.sellerId == request.auth.uid;
      allow update: if isAdmin() || resource.data.sellerId == request.auth.uid;
    }

    // 6. AVIS (Reviews)
    // - Les clients mettent des avis.
    // - On suppose que les avis sont dans une sous-collection de produits ou à part.
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow delete: if isAdmin();
    }
    
    // 7. PROMOS
    // - Admin ou Vendeur seulement
    match /promos/{promoId} {
      allow read: if true;
      allow write: if isAdmin() || isSeller();
    }
  }
}
